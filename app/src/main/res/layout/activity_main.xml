<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#E6E6E6"
    android:id="@+id/activity_main"
    tools:context=".MainActivity">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_rumus"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/linear"
        tools:listitem="@layout/item_bangun"/>

    <LinearLayout
        android:id="@id/linear"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginTop="-6dp"
        android:layout_marginRight="-6dp"
        android:layout_marginLeft="-6dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="@drawable/toolbar">

        <TextView
            android:layout_marginHorizontal="2dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="cursive"
            android:text="@string/math"
            android:textColor="@color/red"
            android:textSize="40sp" />

        <TextView
            android:layout_marginHorizontal="2dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="serif"
            android:text="@string/geometry"
            android:textColor="@color/green"
            android:textSize="35sp" />
    </LinearLayout>

    <Button
        android:id="@+id/suppButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="9dp"
        android:drawableTop="@drawable/ic_teacher"
        android:text="Find a bug? \nClick me"
        android:background="@drawable/bg_button"
        android:textColor="@drawable/button_custom"
        android:textSize="10sp"
        android:textStyle="bold" />
</RelativeLayout>